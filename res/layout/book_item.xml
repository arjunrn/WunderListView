<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:paddingBottom="5dip"
    android:background="@drawable/gradient_item_bg"
    android:orientation="horizontal" >

    <arjun.naik.list.RemoteCoverImage
        android:id="@+id/remote_cover_image"
        android:layout_gravity="center_vertical"
	    android:layout_margin="5dip"
	    android:layout_width="60dip"
	    android:scaleType="fitXY"
	    android:paddingLeft="1px"
        android:paddingTop="0px"
        android:paddingRight="6px"
        android:paddingBottom="1px"
	    android:background="@drawable/imageshadow"
	    android:layout_height="80dip" />
    
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_marginLeft="5dip"
		android:layout_height="100dip"
		android:orientation="vertical" >
		
		<TextView
		    android:id="@+id/book_name"
		    android:layout_width="fill_parent"
		    android:layout_height="60dip"
		    android:layout_gravity="center_vertical"
		    android:layout_margin="5dip"
		    android:shadowColor="#FF444444"
		    android:shadowDx="0"
		    android:shadowDy="0"
		    android:shadowRadius="1"
		    android:text="Book Title - Sometimes Long"
		    android:textColor="#AA000000"
		    android:textSize="15dip"
		    android:typeface="serif" />

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="20dip"
		    android:paddingRight="5dip"
		    android:paddingLeft="5dip"
		    android:background="@drawable/item_price"
		    android:orientation="horizontal" >
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:text="Price : Rs. "
		        android:textColor="#FFDDAA" />
		    
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="20dip"
		        android:id="@+id/book_price"
		        android:text="20"
		        android:textColor="#FFDDAA" />
		    
		</LinearLayout>
		
	</LinearLayout>
	
</LinearLayout>